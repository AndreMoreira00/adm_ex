{
  "manifest_version": 3,
  "name": "Gemini API Extension",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "background": {
    "service_worker": "dist/background.bundle.js"
  },
  "action": {
    "default_popup": "dist/index.html" 
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/contentScript.bundle.js"],
      "run_at": "document_end"
    }
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ]
}
